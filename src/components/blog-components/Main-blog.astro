---
import PostBlogs from "./post-blogs.astro";
import PostSidebar from "./post-sidebar.astro";

---
<main>
    <div class="principal-container w-11/12">
        <div class="redes-sociales">
            <!-- rrss component -->
        </div>
            <div class="post-content">
                <div class="news-container">
                    <h1> News </h1>
                    <img src="../../../public/images/isotipo-TZone-white.svg" alt="isotipo T-zone">
                </div>
                <PostBlogs />
            </div>
            <div class="sidebar">
                <h2>Similar News</h2>
                <PostSidebar/>
            </div>
    </div>
</main>

<style>
    .principal-container{
        margin: 10px auto auto;
        height: 86vh;
        display: grid;
        grid-template-columns: 1fr 20em;
        grid-template-rows: 40px 1fr;
        gap: 10px;
    }

    .redes-sociales{
        grid-column: 1/3 ;
    }

    .post-content{
        grid-column: 1/2;
        grid-row: 2/3;
        background-image:linear-gradient(360deg, rgba(0, 0, 0, .3), rgba(0, 0, 0, 0));
        border-left: 1px solid white;
        border-right: 1px solid white;
        overflow: scroll;
        padding-bottom: 20px;
    }
    
    .news-container{
        display: flex;
        gap: 5px;
        align-items: center;
        padding: 5px 20px;
        margin-left: 20px;
    }

    @keyframes isorotation{
        from {rotate: 0deg;}
        to {rotate:360deg;}
    }

    img{
        float: left;
        height: 50px;
        animation-name: isorotation;
        animation-duration: 3s;
        animation-iteration-count: infinite;
    }

    h1{
        font-family: 'Roboto', sans-serif;
        font-weight: bold;
        font-size: 45px;
        color: white;

    }

    .sidebar{
        grid-column: 2/3;
        grid-row: 2/3;
        background-color: rgba(0, 0, 0, 0.2);
        /* border-left: 1px solid white;
        border-right: 1px solid white; */
        overflow: scroll;
    }

    .sidebar > h2{
        font-family: 'Roboto', sans-serif;
        font-weight: bold;
        font-size: 30px;
        color: white;
        margin: 15px;
    }

     /* width */
     .post-content::-webkit-scrollbar {
    width: 10px;
    height: 0px;
    }

    /* Track */
    .post-content::-webkit-scrollbar-track { 
    border-radius: 10px;
    }
    
    /* Handle */
    .post-content::-webkit-scrollbar-thumb {
    background: rgb(94, 16, 167); 
    border-radius: 10px;
    }

    /* Handle on hover */
    .post-content::-webkit-scrollbar-thumb:hover {
    background: rgb(67, 13, 117); 
    }
   

    /* width */
    .sidebar::-webkit-scrollbar {
    width: 5px;
    height: 0px;
    }

    /* Track */
    .sidebar::-webkit-scrollbar-track { 
    border-radius: 10px;
    }
    
    /* Handle */
    .sidebar::-webkit-scrollbar-thumb {
    background: rgb(94, 16, 167); 
    border-radius: 10px;
    }

    /* Handle on hover */
    .sidebar::-webkit-scrollbar-thumb:hover {
    background: rgb(67, 13, 117); 
    }

</style>