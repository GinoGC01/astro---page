---

export interface Props{
     clase:string,
     href:any
}

const { clase, href } = Astro.props
---
<a class={clase} href={href} >
     lean more
</a>

<style>
     a{
          width: 180px;
          background-color: rgb(92, 0, 141);
          color: white;
          box-shadow: 0px 2px 5px rgba(255, 255, 255, 0.1);
          text-align: center;
          border-radius: 10px;
          font-size: 17px;
          font-weight: 500;
          padding: 5px 0;
          transition: all .5s;
     }

     a:hover{
          background-color:rgb(93, 68, 235);
     }

     .post-button{
          position:absolute;
          right: 55px;
          bottom: 17px;
     }

     .sidebar{
          margin: 20px 0px;
     }
</style>