---
export interface Props{
home: string,
about: string,
contact: string
}

const {home, about, contact} = Astro.props
---

<header class="flex h-22 w-11/12 mx-auto justify-between">
    <div class="px-10 my-5 mx-16">
        <img class="h-12" src="/public/images/image.png" alt="logo image">
    </div>
    <nav class="my-auto p-2">
        <ul class="flex gap-20 px-5 justify-end mx-6">
            <li><a class="text-slate-100 text-xl" href={home}>Home</a></li>
            <li><a class="text-slate-100 text-xl" href={about}>About</a></li>
            <li><a class="text-slate-100 text-xl" href={contact}>Contact</a></li>
        </ul>
    </nav>
</header>

<style>
    header{
        border-bottom: 1px solid white;
    }
</style>